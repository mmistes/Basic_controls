<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first_hw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#1F2FF0"
        android:fontFamily="monospace"
        android:text="Hello world!"
        android:textAlignment="textStart"
        android:textColor="#F2D42E"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#206AFA"
        android:fontFamily="serif"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FCC030"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#2999E3"
        android:fontFamily="cursive"
        android:text="Hello World!"
        android:textAlignment="textEnd"
        android:textAllCaps="true"
        android:textColor="#E69737"
        android:textSize="40sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мой ТГ: https://t.me/mmistes_vangog"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:background="#3884D6"
        android:textColorLink="#0B2D33"
        android:autoLink="web|email"
        app:layout_constraintTop_toBottomOf="@+id/first_hw"
        app:layout_constraintLeft_toLeftOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>